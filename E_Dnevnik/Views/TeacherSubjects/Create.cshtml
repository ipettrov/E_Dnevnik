@model E_Dnevnik.Models.TeacherSubject

@{
    ViewBag.Title = "Додај предмет";
}

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div style="padding:30px 0;">
                <a href="/" class="btn btn-link">
                    <i class="glyphicon glyphicon-chevron-left"></i>
                    <span>Назад кон почетна</span>
                </a>
            </div>

            <div class="login-form" style="margin-bottom:30px;">
                <h3>Додај предмет</h3>
                <p>Избери го предметот кој го предаваш и додај го.</p>

                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.TeacherId, "Наставник", htmlAttributes: new { @class = "control-label" })
                    <div>
                        <b style="font-weight:700;">@Html.Label((string)TempData["TeacherName"])</b>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SubjectId, "Предмет", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.DropDownList("SubjectId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <input type="submit" value="Додај го предметот" class="btn btn-primary btn-block" />
                        <p class="small" style="margin:5px 0 0 0;">Доколку веќе го имаш додадено предметот, нема ништо да се случи.</p>
                    </div>
                </div>
            </div>
        }
    </div>
    </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
