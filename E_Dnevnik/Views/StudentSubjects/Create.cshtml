@model E_Dnevnik.Models.StudentSubject

@{
    ViewBag.Title = "Додај Оценка";
}

<div class="row">
    <div class="col-md-6">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div style="padding:30px 0;">
                <a href="/" class="btn btn-link">
                    <i class="glyphicon glyphicon-chevron-left"></i>
                    <span>Назад кон почетна</span>
                </a>
            </div>

            <div class="login-form" style="margin-bottom:30px;">
                <h3>Додај оценка</h3>
                <p>Избери го студентот и предметот за кој што сакаш да додадеш оценка.</p>

                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.StudentId, "Студент", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.DropDownList("StudentId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SubjectId, "Предмет", htmlAttributes: new { @class = "control-label" })
                    <div >
                        @Html.DropDownList("SubjectId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FirstGrade, "Оценка", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.FirstGrade, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FirstGrade, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div >
                        <input type="submit" value="Додај оценка" class="btn btn-primary btn-block" />
                        <p class="small" style="margin:5px 0 0 0;">Доколку веќе имаш додадено оценка, втората додадена оценка ќе биде крајна</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
