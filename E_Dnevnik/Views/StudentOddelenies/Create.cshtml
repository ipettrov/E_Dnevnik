@model E_Dnevnik.Models.StudentOddelenie

@{
    ViewBag.Title = "Додај предмет";
}

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div style="padding:30px 0;">
                <a href="/" class="btn btn-link">
                    <i class="glyphicon glyphicon-chevron-left"></i>
                    <span>Назад кон почетна</span>
                </a>
            </div>

            <div class="login-form" style="margin-bottom:30px;">
                <h3>Додај одделение</h3>
                <p>Избери во кое одделение припаѓаш.</p>

                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.StudentId, "Ученик", htmlAttributes: new { @class = "control-label" })
                    <div>
                        <b style="font-weight:700;">@Html.Label((string)TempData["StudentName"])</b>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.OddelenieId, "Одделение", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.DropDownList("OddelenieId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.OddelenieId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <input type="submit" value="Внеси" class="btn btn-primary btn-block" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
